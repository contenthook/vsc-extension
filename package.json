{
  "name": "contenthook",
  "displayName": "Contenthook",
  "description": "The extension bringing the contenthook utilities to vscode",
  "version": "1.0.2",
  "publisher": "contenthook",
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "preview": true,
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "homepage": "https://github.com/contenthook/vsc-extension",
  "bugs": {
    "url": "https://github.com/contenthook/vsc-extension/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "contenthook",
    "content",
    "hook",
    "extension",
    "vscode"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "activationEvents": [
    "onView:contenthookSidebar"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/contenthook/vsc-extension"
  },
  "badges": [
    {
      "url": "https://vsmarketplacebadge.apphb.com/version/contenthook.contenthook.svg",
      "href": "https://marketplace.visualstudio.com/items?itemName=contenthook.contenthook",
      "description": "Visual Studio Marketplace Version",
      "type": "svg"
    },
    {
      "url": "https://vsmarketplacebadge.apphb.com/installs-short/contenthook.contenthook.svg",
      "href": "https://marketplace.visualstudio.com/items?itemName=contenthook.contenthook",
      "description": "Visual Studio Marketplace Installs",
      "type": "svg"
    },
    {
      "url": "https://vsmarketplacebadge.apphb.com/rating-star/contenthook.contenthook.svg",
      "href": "https://marketplace.visualstudio.com/items?itemName=contenthook.contenthook",
      "description": "Visual Studio Marketplace Rating",
      "type": "svg"
    }
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Contenthook",
      "properties": {
        "contenthook.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Contenthook API key"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "contenthookSidebar",
          "title": "Contenthook",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "contenthookSidebar": [
        {
          "id": "contenthookView",
          "name": "Contenthook",
          "type": "webview"
        }
      ]
    }
  },
  "vsce": {
    "files": [
      "out",
      "src",
      "package.json",
      "README.md",
      "CHANGELOG.md",
      "media"
    ],
    "dependencies": true,
    "yarn": false
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@types/vscode": "^1.91.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.29.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.6.0",
    "gray-matter": "^4.0.3",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3",
    "ws": "^8.18.0"
  }
}
